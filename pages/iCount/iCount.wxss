/**index.wxss**/
.count {
  min-height: 100%;
  height: 100%;
}
.header {
  background-color: var(--main-color);
  color: #fff;
}
.header picker {
  background-color: rgba(0,0,0,.2);
  border-radius: 80rpx;
  padding: 0 30rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.header .filter-error checkbox {
  opacity: 0;
  position: absolute;
}
.header .filter-error .check {
  width: 12px;
  height: 12px;
  border-radius: 50px;
  border: 2px solid #fff;
  position: relative;
}
.header .filter-error .check::before {
  content: '';
  width: 8px;
  height: 8px;
  left: 2px;
  top: 2px;
  border-radius: 20rpx;
  position: absolute;
  background-color: #fff;
  opacity: 0;
}
.header .filter-error .check.active::before {
  opacity: 1;
}
.header .group {
  background-color: rgba(0,0,0,.2);
  border-radius: 50rpx;
  padding: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.header .input {
  width: 100rpx;
  height: auto;
  line-height: inherit;
}
.header .search {
  background-color: #ff872e;
  color: #fff;
  border-radius: 6rpx;
  padding: 12rpx 35rpx;
  font-size: 28rpx;
  font-weight: bold;
}